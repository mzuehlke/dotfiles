#!/bin/bash

source `dirname $0`/../colors.bash
source `dirname $0`/../git.bash

function __do_git_status_verbose() {
    prompt_command_mz

    git_ps1=$(__git_ps1 "%s")
    GIT_PS1_SHOWUPSTREAM="git"
    p=""
    __git_ps1_show_upstream
    unset GIT_PS1_SHOWUPSTREAM
    status="${git_ps1}${p}"
    branch="$(git symbolic-ref HEAD 2>/dev/null)"

    now=`date '+%Y-%m-%d'`
    diffDir="$HOME/Dropbox/Stashes/${now}"
    diffFile="${diffDir}/`basename ${wd}`.diff"
    
    if [[ $status != "${branch##refs/heads/}=" ]]; then
      echo "Stashing to ${diffFile}"
      mkdir -p $diffDir
      git-total-diff > $diffFile
    fi
}

foreach_gitdir __do_git_status_verbose all
