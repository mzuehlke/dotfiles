#!/bin/bash

source `dirname $0`/../colors.bash
source `dirname $0`/../git.bash
source `dirname $0`/../prompt.bash

all=$(parse_all_parameter "$@");
head_wd=$(pwd);

while read line; do (  
  cd $line;
  wd=$(pwd);
  prefix=${wd#$head_wd};
  if [[ $wd != $prefix || -n $all ]]; then
    prompt_command_mz $wd
  fi
) done <$HOME/.mgitrepos
