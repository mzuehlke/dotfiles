#!/bin/bash

source `dirname $0`/../colors.bash
source `dirname $0`/../git.bash

function __do_fetch() {
    prompt_command_mz $wd

    GIT_PS1_SHOWUPSTREAM="git verbose"
    p=""
    __git_ps1_show_upstream
    p_before=$p

    git fetch

    p=""
    __git_ps1_show_upstream
    unset GIT_PS1_SHOWUPSTREAM

    if [[ $p != $p_before ]]; then
      prompt_command_mz $wd
    fi
}

foreach_gitdir __do_fetch $@
