#!/bin/bash

source `dirname $0`/../colors.bash
source `dirname $0`/../git.bash

all=$(parse_all_parameter "$@")
head_wd=$(pwd)

while read line; do (  
  cd $line
  wd=$(pwd)
  prefix=${wd#$head_wd}
  if [[ $wd != $prefix || -n $all ]]; then

    echo -e "${LIGHT_BLUE}${wd/$HOME/~}${NC}"
    git remote -v | grep push | sed 's/(.*$//'

  fi
) done <$HOME/.mgitrepos
