#!/bin/bash

source `dirname $0`/../colors.bash
source `dirname $0`/../git.bash
source `dirname $0`/../prompt.bash

all=$(parse_all_parameter "$@");
head_wd=$(pwd);

while read line; do (  
  cd $line;
  wd=$(pwd);
  prefix=${wd#$head_wd};
  if [[ $wd != $prefix || -n $all ]]; then
    prompt_command_mz $wd

    git_ps1=$(__git_ps1 "%s")
    GIT_PS1_SHOWUPSTREAM="git"
    p=""
    __git_ps1_show_upstream
    unset GIT_PS1_SHOWUPSTREAM
    status="${git_ps1}${p}";
    branch="$(git symbolic-ref HEAD 2>/dev/null)";

    if [[ $status == "${branch##refs/heads/}<" ]]; then
      echo "merging....";
      git merge --verbose @{upstream};
    fi
  fi
) done <$HOME/.mgitrepos
